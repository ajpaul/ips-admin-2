{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false
    },
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true,
        "forkChecker": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "exclude": [
        "dist",
        "node_modules",
        "typings/index",
        "typings/index.d.ts"
    ]
}